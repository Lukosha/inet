<?xml version="1.0"?>
<OSPFASConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="OSPF.xsd">

  <!-- Areas -->
  <Area id="0.0.0.1">
    <AddressRange Address="192.168.1.0" Mask="255.255.255.0" Status="Advertise"/>
  </Area>
  <Area id="0.0.0.2">
    <AddressRange Address="192.168.2.0" Mask="255.255.255.0" Status="Advertise"/>
  </Area>

  <!-- Routers -->
  <Router id="192.168.1.254"> <!-- R1 -->
    <RFC1583Compatible/>
    <BroadcastInterface ifName="eth0" AreaID="0.0.0.1" InterfaceOutputCost="1" RetransmissionInterval="5" InterfaceTransmissionDelay="1" RouterPriority="1" HelloInterval="10" RouterDeadInterval="40" AuthenticationType="NullType" AuthenticationKey="0x00"/>
  </Router>
  
  <Router id="192.168.2.254"> <!-- R2 -->
    <RFC1583Compatible/>
    <BroadcastInterface ifName="eth0" AreaID="0.0.0.2" InterfaceOutputCost="1" RetransmissionInterval="5" InterfaceTransmissionDelay="1" RouterPriority="1" HelloInterval="10" RouterDeadInterval="40" AuthenticationType="NullType" AuthenticationKey="0x00"/>
  </Router>
  
</OSPFASConfig>
